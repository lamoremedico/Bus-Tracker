doctype html
html
	head
		title= title

		style.
			body {
				padding: 25px 50px;
				font-family: Verdana;
				font-size: 13px;
				background: #f6f66b 		/* #FFFF00 brighter yellow */
			}
			#logo {
				width: 760px;
				border: 10px ridge black;
			}
			#options {
				font-family: Verdana;
				font-size: 16px;
				border: 5px solid black;
				border-radius: 20px;
				margin: 20px 20px 20px 0px;
				background: #dfdfdf;
			}
			#bheader {
				margin: 20px 0px 0px 20px;
			}
			#bus27button {
				margin: -20px 0px 20px 100px;
			}
			#busdriverbutton {
				margin: -20px 0px 20px 360px;
			}
			#feedbackbutton {
				margin: -20px 0px 20px 520px;
			}
			#logoutbutton {
				margin: -20px 0px 20px 95px;
			}
			#footer {
				padding: 10px 0px;
			}
	body
	#logo
		img(src='/images/UAheader.gif')
	h2 Welcome, #{user} Please Select Your Bus

	#options 
		#bheader
			| Bus #22:
		#bus27button
			form(name="bus22", action="/bus22", method="get")
				input(type="submit", value="Greensview Elementary Bus 22")


	#options 
		#bheader
			| If you are a Bus Driver, please click here:	
		#busdriverbutton
			form(name="driver", action="/driverlogin", method="get")
				input(type="submit", value="Bus Driver")

	#options 
		#bheader
			| Please All Users Leave Feedback About This Application Here:	
		#feedbackbutton
			form(name="feedback", action="/feedback", method="get")
				input(type="submit", value="Feedback")

	#options 
		#bheader
			| Log Out:	
		#logoutbutton
			form(name="logout", action="/logout", method="get")
				input(type="submit", value="Log Out")
	
	#footer
		div Copyright Â© UAHS Senior Capstone Project #{+new Date().getFullYear()}
		a(href='/about') About 
		| | 
		a(href="mailto:lamoremedico@gmail.com?subject=UA School Bus Tracking Feedback") Contact Us 
		| | 
		a(href='/login') Home 
		| | 
		a(href='/logout') Log Out
